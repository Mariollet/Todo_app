<div class="container">
  <div class="row">


    <div class="col-lg-6">
     
      <div class="card">
        <div class="card-header">
          <h1>Liste des emails : <a type="button" class="btn btn-primary" href="email" data-method="POST">Recevoir un email</a></h1>
        </div><br>
        <% @emails.each do |email| %>
          <ul>
            <li> Object : <%= email.object %> </li>
          </ul>
        <% end %>
      </div>

    </div>

    <div class="col-lg-6">

      <div class="card">
        <div class="card-header">
          <h1>Email sélectionné :</h1>
        </div><br>
        <% @emails.each do |email| %>
          <ul>
            <li> Object : <%= email.object %> </li>
            <ul>
              <li> Body : <%= email.body %> </li>
            </ul>
          </ul>
        <% end %>
      </div>

    </div>